            size_hint: 0.8,0.1
            pos_hint:{"x":0.1,"top":0.11}
            font_size: (root.width**2.02 + root.height**2.02) / 14**4
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "right"
                root.clear()
        
            
                

            
        
            

